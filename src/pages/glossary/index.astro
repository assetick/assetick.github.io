---
// Blog Index Page
// ------------
// Description: The blog index page.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import GlossaryPosts from '../../components/blocks/glossary/GlossaryPosts.astro'

// Data
import { getCollection } from 'astro:content'

// Content
// - SEO
const SEO = {
	title: 'Assetick | Latest Assetick News and updates',
	description:
		"Explore Assetick's latest news designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools. Join thousands of satisfied users and transform your workflow with Assetick today!"
}
// - Page Header
const header = {
	title: 'The <strong>Assetick</strong> glossary',
	text: 'So much jargon. So many acronyms. What does it all mean? Let our comprehensive glossary of asset management and asset performance lingo be your guide.'
}

const allPosts = await getCollection('glossary')
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<GlossaryPosts data={allPosts} />
</Layout>
