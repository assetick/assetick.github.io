---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import Price from '../components/blocks/pricing/PricingColumns.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'
import FAQ from '../components/blocks/FAQ/Basic.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import Feature from '../components/blocks/features/FeatureList.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - SEO
const SEO = {
	title: 'Assetick | Pricing made simple',
	description:
		'Discover the perfect SaaS pricing plan for your business. From startups to enterprises, our scalable solutions offer unparalleled features and support.'
}
// - Page Header
const header = {
	title: 'Choose the plan that works for <strong>your business needs</strong>',
	text: 'All plans come with a 30 day free usage to help you configure the solution as per your business needs.'
}
// - Testimonial data
import testimonialBackground from '../assets/testimonial-bg-02.webp'
const testimonialData = {
	blockquote:
		"Assetick has helped us streamline our maintenance operations across customers. We not only get reminders for next scheduled maintenance but also deep insight to further improve our schedules itself.",
	figcaption: 'Vijay Bhosale',
	cite: ' CEO, Total solutions pvt. Ltd'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Price />
	<SocialProof />
	<Feature />
	<Testimonial
		bg={testimonialBackground}
		bgPosition="left"
		blockquote={testimonialData.blockquote}
		figcaption={testimonialData.figcaption}
		cite={testimonialData.cite}
	/>
	<FAQ classes="bg-slate-50 dark:bg-neutral-900/40" />
	<CTA />
</Layout>
