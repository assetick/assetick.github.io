---
// Imports
const { frontmatter } = Astro.props

//Layout Components
import Layout from './Layout.astro'

// Section Components
import GlossaryPostHero from '../components/blocks/glossary/GlossaryPostHero.astro'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | Assetick`,
	description: `${frontmatter.description}`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<GlossaryPostHero
		tags={frontmatter.tags}
		title={frontmatter.title}
		author={frontmatter.author}
		publishDate={frontmatter.pubDate.toLocaleDateString('en-US', {
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		})}
	/>

	<div class="post-body basic-text basic-text--lg">
		<slot />
	</div>
</Layout>

<style>
	.post-body {
		@apply mx-auto max-w-7xl px-6 py-12 lg:py-24;
	}
	.basic-text p:has(img) {
		text-align: -webkit-center;
	}
</style>
